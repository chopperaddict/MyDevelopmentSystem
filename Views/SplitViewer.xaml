                        <RowDefinition Height="65" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="65" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"    />
                        <ColumnDefinition Width="250"    />
                    </Grid.ColumnDefinitions>
                    <!--#endregion grid setup-->

                           <TextBlock Text="Global Options" 
                                    Grid.Row="0" 
                                    Grid.Column="0" 
                               Background="{StaticResource Blue3}"
                               Foreground="White" 
                               TextAlignment="Center"
   
                               Width="{Binding ActualWidth,ElementName=GreenBorder}"
                                  Grid.ColumnSpan="3" Margin="-50,0 0 0" FontWeight="DemiBold"/>

                    <Border 
                            Grid.Row="1" 
                            Grid.Column="0"
                            Grid.ColumnSpan="2" BorderBrush="Red" BorderThickness="2" Background="{StaticResource Gray5}">
