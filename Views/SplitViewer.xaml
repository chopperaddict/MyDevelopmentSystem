                    Template="{StaticResource HorizontalGradientTemplateYellow}"
                     Style="{StaticResource ButtonGrowBorderAnimation}"
                    VerticalAlignment="Top"
                    Width="110" 
                    TabIndex="10" Grid.Column="1" />

