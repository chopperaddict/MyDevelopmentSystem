        <Grid x:Name="ButtonsGrid"
						        Background="{StaticResource Red5}"
						        Margin="0,0,0,0" 
						        Height="65"
						        MinHeight="65" MaxHeight="65" 
						        Grid.Row="3" 
                                Panel.ZIndex="1"
                                HorizontalAlignment="Stretch"
						        Grid.Column="0"  
						        Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="627*"/>
                <ColumnDefinition Width="373*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="infopanel" Width="600" 
                       HorizontalAlignment="Left"
                       Margin="20,20,0,20"
                       Padding="0 3 0 0"
                       TextAlignment="Center"
                       Height="25" Foreground="White" Background="Black"/>
            <Image Source="\Icons\small Magnify.png" 
                               Panel.ZIndex="2" 
                               PreviewMouseLeftButtonDown="Image_PreviewMouseLeftButtonDown" 
                               ToolTip="Click to toggle DataGrid Magnification System" Margin="15,12,324,17" Height="35" Width="35" Grid.Column="1"/>
            <TextBlock x:Name="Magnifyrate" 
                   Text="+4"
