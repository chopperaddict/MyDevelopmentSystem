			  Text="Data Templates :"
			  VerticalAlignment="Top"
			  Width="115" />
		<TextBlock
			  FontSize="14"
			  FocusVisualStyle="{x:Null}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource Black0}"
