<Window x:Class="MyDev.Views.Listviews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDev.Views"
        xmlns:conv="clr-namespace:MyDev.Converts"
        xmlns:user="clr-namespace:MyDev.UserControls"
        mc:Ignorable="d"
	 Loaded="ListViewWindow_Loaded"
		x:Name="ListViewWindow"
       Title="List Views" 
	  MinHeight="650" MinWidth="1000"
	  Height="650" Width="1000">

	<Window.Resources>
		<conv:ReduceByParamValue x:Key="resetTextWidth"/>
	</Window.Resources>

	<Window.Background>
		<LinearGradientBrush  StartPoint="1,0" EndPoint="0,0">
			<GradientStop Offset="0" Color="#FFAAAAAA" />
			<GradientStop Offset="0.3" Color="#FF6B8E95" />
			<GradientStop Offset="0.609" Color="#FF6B8E95" />
			<GradientStop Offset="1" Color="#FF14A7C1" />
			<!--<GradientStop Offset="0" Color="#FF193A44" />-->
		</LinearGradientBrush>
	</Window.Background>

	<Grid x:Name="MainGrid">

		<Grid.RowDefinitions>
			<RowDefinition  Height="5" />
			<RowDefinition  x:Name="row1" Height="5*" />
			<RowDefinition   Height="2*" />
			<RowDefinition   Height="65" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition  Width="10" />
			<ColumnDefinition x:Name="col1" Width="*" />
			<ColumnDefinition x:Name="col2" Width="10" />
			<ColumnDefinition  Width="*" />
			<ColumnDefinition  Width="10" />
		</Grid.ColumnDefinitions>

		<!--#region Flowdoc-->

		<Canvas x:Name="canvas" Grid.Row="0"
			  Grid.Column="0"
			  Grid.RowSpan="5"
			  Grid.ColumnSpan="5"
			  Height="{Binding ActualHeight, ElementName=MainGrid}"
			  Panel.ZIndex="3"
			  Visibility="Hidden"
			  Width="{Binding ActualWidth, ElementName=MainGrid}"
			  >

			<!--btnBkGround="{StaticResource Red5}"
				btnForeGround="{StaticResource White0}"-->
			<user:FlowDoc x:Name="Flowdoc"
				backGround="{StaticResource Gray5}"
				borderColor="{StaticResource Orange1}"
				Canvas.Left="45" 
				Canvas.Top="64" 
				Height="300"
				Margin="0 0 0 0" 
				MouseLeftButtonUp="Flowdoc_MouseLeftButtonUp"
				MouseMove="Flowdoc_MouseMove"
				Opacity="1"
				Panel.ZIndex="2"
				PreviewMouseLeftButtonDown="Flowdoc_PreviewMouseLeftButtonDown"
				Visibility="Hidden" 						  
				Width="520"
			/>
			<!--IsVisibleChanged="Flowdoc_IsVisibleChanged"-->
		</Canvas>

		<!--#endregion Flowdoc-->

		<!--#region List Box/views-->


		<!--Background="{StaticResource Cyan4}"-->
		
		<ListBox x:Name="listBox" 
				Background="Transparent"
				FontSize="12"
				Grid.Column="1"
				Grid.Row="1"
				Height="{Binding row1.Height}"
				HorizontalAlignment="Stretch"
				ItemContainerStyle="{StaticResource _ListBoxItemStyle1}"
				ItemTemplate="{DynamicResource BankDataTemplate1}" 
				Margin="0,30,0,0"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				VerticalAlignment="Top"
				VerticalContentAlignment="Stretch"
				/>

		<!--FontSize="{Binding Fontsize, ElementName=Listviews}"-->
		<ListView x:Name="listView" 
				Background="Beige"	
				FocusVisualStyle="{x:Null}"
				Grid.Column="3"
				Grid.ColumnSpan="1"
				Grid.Row="1"
				Height="{Binding row1.Height}"
				HorizontalAlignment="Stretch"	
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				Margin="0 30 0 0"
				ItemContainerStyle="{StaticResource lvItemStyle1}"
				ItemTemplate="{DynamicResource BankDataTemplate1}" 
				VerticalAlignment="Top"
			    VerticalContentAlignment="Stretch">
			<!--<ListViewItem Height="{Binding Path=ItemsHeight}"/>-->
		</ListView>

		<!--#endregion List Box/views-->

		<!--#region TextBoxes / Blocks-->

		<TextBox x:Name="lbHeader" 
			Background="{StaticResource Blue0}"
			FontSize="16"
			FontWeight="DemiBold"
			Foreground="{StaticResource Yellow1}"
			Grid.Column="1"
			Grid.Row="1" 
			Grid.RowSpan="1"
			Height="25"
			HorizontalContentAlignment="Center"
			Margin="0 0 0 0"
			Padding="0 0 0 0"
			Text="List Box Display"
			VerticalAlignment="Top"/>
		<TextBox x:Name="lvHeader"  
			Background="{StaticResource Blue0}"
			FontSize="16"
			FontWeight="DemiBold"
			Foreground="{StaticResource Yellow1}"
			Grid.Column="3"
			Grid.Row="1" 
			Grid.RowSpan="1"
			Height="25"
			HorizontalContentAlignment="Center"
			Margin="0 0 0 0"
			Padding="0 0 0 0"
			Text="List View Display"
			VerticalAlignment="Top"/>
		<TextBox x:Name="tbCount"
			  AllowDrop="True"
			  Background="{StaticResource Red5}"
			  CaretBrush="{StaticResource White0}"
			  FocusVisualStyle="{x:Null}"
			  Foreground="{StaticResource White0}"
			  FontSize="15"
			  FontWeight="Bold"
			  Grid.Row="3"
			  Grid.Column="1"
			  Height="30"
			  HorizontalAlignment="Left"
			  Margin="0,15,0,0"
			  Padding="0 4 0 0"
			  Text="{Binding DbCount, UpdateSourceTrigger=PropertyChanged}"
			  TextAlignment="center"
			  TextWrapping="NoWrap"
			  VerticalAlignment="Top"
			  Width="53" Grid.ColumnSpan="2" />
		<TextBox x:Name="LoadTime" 
			  Background="{StaticResource Blue1}"
			  FocusVisualStyle="{x:Null}"
			  Foreground="{StaticResource White0}" 
			  FontSize="15"
			  FontWeight="Normal"
			  Grid.Row="3"
			  Grid.Column="1"
			  Height="30"
			  HorizontalAlignment="Left"
			  Margin="70,15,0,0" 
			  Padding="0 4 0 0"
			  TextAlignment="center"  
			  TextWrapping="NoWrap" 
			  VerticalAlignment="Top" 
			  Width="82" />
		<TextBlock  
			  FontSize="14"
			  Background="Transparent"
			  FocusVisualStyle="{x:Null}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource White0}"
			  Grid.Row="2" 
			  Grid.Column="3"
			  Height="23"    
			  HorizontalAlignment="Right"
			  Margin="0,0,235,10"
			  Text="Select Db Table to load :"
			  VerticalAlignment="Bottom"
			  Width="158" 
			/>
		<TextBlock  
			  Background="Transparent"
			  FocusVisualStyle="{x:Null}"
			  FontSize="{Binding Fontsize, ElementName=Listviews}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource White0}"
			  Grid.Row="2" 
			  Grid.Column="3"
			  Height="23"    
			  HorizontalAlignment="Right"
			  Margin="0,11,230,0"
			  Text="Data Templates :"
			  VerticalAlignment="Top"
			  Width="113" 
			/>
		<TextBlock  
			  FontSize="14"
			  Background="Transparent"
			  FocusVisualStyle="{x:Null}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource White0}"
			  Grid.Row="2" 
			  Grid.Column="1"
			  Height="23"    
			  HorizontalAlignment="Right"
			  Margin="0,9,230,0"
			  Text="Data Templates :"
			  VerticalAlignment="Top"
			  Width="115" 
			/>
		<TextBlock  
			  FontSize="14"
			  FocusVisualStyle="{x:Null}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource White0}"
			  Grid.Row="3" 
			  Grid.Column="1"
			  Height="23"    
			  HorizontalAlignment="Left"
			  Margin="165,19,0,0"
			  Text="Font Size:"
			  VerticalAlignment="Top"
			  Width="67" 
					/>
		<TextBlock  
				FontSize="14"
				Background="Transparent"
				FocusVisualStyle="{x:Null}"
				FontWeight="DemiBold"
				Foreground="{StaticResource White0}"
				Grid.Row="3" 
				Grid.Column="1"
				Height="23"    
				HorizontalAlignment="Left"
				Margin="310,19,89,0"
				Text="Row Height :"
				VerticalAlignment="Top"
				Width="86" 
							/>
		<TextBlock  
			  FontSize="14"
			  Background="Transparent"
			  FocusVisualStyle="{x:Null}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource White0}"
			  Grid.Row="2"
			  Height="23"    
			  HorizontalAlignment="Left"
			  Margin="10,71,0,0"
			  Text="Select Current Database :"
			  VerticalAlignment="Top"
			  Width="168" Grid.Column="1" 
					/>
		<TextBlock  
			  Background="Transparent"
			  FocusVisualStyle="{x:Null}"
			  FontSize="{Binding Fontsize, ElementName=Listviews}"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource White0}"
			  Grid.Row="2" 
			  Grid.Column="1"
			  Height="14"    
			  HorizontalAlignment="Left"
			  Margin="293,98,0,0"
			  Text="Caution Major switch over !!"
			  VerticalAlignment="Top"
			  Width="164" 
			/>

		<!--#endregion TextBoxes / Blocks-->

		<!--#region Combos-->

		<ComboBox  x:Name="dbName"
			  AllowDrop="True"
			  FontSize="14"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource Red5}"
			  Grid.Row="2"
			  Grid.Column="3"
			  Height="25"
			  HorizontalAlignment="Right"
			  HorizontalContentAlignment="Left"
			  Margin="0,0,0,9"
			  MaxDropDownHeight="257"
			  Padding="5 3 0 0"
			  PreviewMouseRightButtonUp="dbName_PreviewMouseRightButtonUp"
			  SelectionChanged="dbName_SelectionChanged"    
			  TabIndex="4"
			  Text="Db Name..." 
			  ToolTip="Right Click to refresh list of Tables... "
			  VerticalAlignment="Bottom"
			  Width="231"
			/>
		<ComboBox  x:Name="DataTemplatesLb"
			  AllowDrop="True"
			  FontSize="13"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource Red5}"
			  Grid.Row="2"
			  Grid.Column="1"
			  Height="25"
			  HorizontalAlignment="Right"
			  HorizontalContentAlignment="Left"
			  Margin="0,9,0,0"
			  MaxDropDownHeight="257"
			  Padding="5 3 0 0"
			  SelectionChanged="LBDataTemplate_SelectionChanged"    
			  TabIndex="4"
			  Text="Db Name..." 
			  VerticalAlignment="Top"
			  Width="229"
			/>

		<ComboBox  x:Name="DataTemplatesLv"
			  AllowDrop="True"
			  FontSize="13"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource Red5}"
			  Grid.Row="2"
			  Grid.Column="3"
			  Height="25"
			  HorizontalAlignment="Right"
			  HorizontalContentAlignment="Left"
			  Margin="0,10,0,0"
			  MaxDropDownHeight="257"
			  Padding="5 3 0 0"
			  SelectionChanged="LVDataTemplate_SelectionChanged"    
			  TabIndex="4"
			  Text="Db Name..." 
			  VerticalAlignment="Top"
			  Width="231"
			/>

		<ComboBox  x:Name="DbMain"
			  AllowDrop="True"
			  FontSize="14"
			  FontWeight="DemiBold"
			  Foreground="{StaticResource Red5}"
			  Grid.Row="2"
			  Grid.Column="1"
			  Height="25"
			  HorizontalAlignment="Left"
			  HorizontalContentAlignment="Left"
			  Margin="190,0,0,0"
			  MaxDropDownHeight="257"
			  Padding="5 3 0 0"
			  SelectionChanged="dbMain_SelectionChanged"    
			  TabIndex="4"
			  Text="Db Name..." 
			  VerticalAlignment="Center"
			  Width="294"
			/>

		<ComboBox  x:Name="fontSize"
			  AllowDrop="True"
			  FontSize="16"
			  FontWeight="Regular"
			  Foreground="{StaticResource Blue0}"
			  Grid.Row="3"
			  Grid.Column="1"
			  Height="35"
			  HorizontalAlignment="Left"
			  HorizontalContentAlignment="Left"
			  MaxDropDownHeight="250"
			  Padding="10 3 0 0"
			  SelectedIndex="1"
			  SelectionChanged="fontsize_SelectionChanged"   

			  Text="Db Name..." 
			  VerticalAlignment="Top"
			  Width="60" Margin="239,15,0,0"
			>
			<ComboBoxItem Content="11"/>
			<ComboBoxItem Content="12"/>
			<ComboBoxItem Content="13"/>
			<ComboBoxItem Content="14"/>
			<ComboBoxItem Content="15"/>
			<ComboBoxItem Content="16"/>
			<ComboBoxItem Content="17"/>
			<ComboBoxItem Content="18"/>
			<ComboBoxItem Content="19"/>
			<ComboBoxItem Content="20"/>
		</ComboBox>

		<ComboBox  x:Name="rowheight"
			  AllowDrop="True"
			  FontSize="16"
			  FontWeight="Regular"
			  Foreground="{StaticResource Blue0}"
			  Grid.Row="3"
			  Grid.Column="1"
			  Height="35"
			  HorizontalAlignment="Left"
			  HorizontalContentAlignment="Left"
			  MaxDropDownHeight="250"
			  Padding="10 3 0 0"
			  SelectedIndex="5"
			  SelectionChanged="rowheight_SelectionChanged"   
			  Text="Db Name..." 
			  VerticalAlignment="Top"
			  Width="60" Margin="401,15,0,0">
			<ComboBoxItem Content="10"/>
			<ComboBoxItem Content="12"/>
			<ComboBoxItem Content="14"/>
			<ComboBoxItem Content="16"/>
			<ComboBoxItem Content="18"/>
			<ComboBoxItem Content="20"/>
			<ComboBoxItem Content="22"/>
			<ComboBoxItem Content="24"/>
			<ComboBoxItem Content="26"/>
			<ComboBoxItem Content="28"/>
			<ComboBoxItem Content="30"/>
			<ComboBoxItem Content="32"/>
			<ComboBoxItem Content="34"/>
			<ComboBoxItem Content="36"/>
			<ComboBoxItem Content="38"/>
			<ComboBoxItem Content="40"/>
			<ComboBoxItem Content="45"/>
		</ComboBox>

		<!--#endregion Combos-->

		<!--#region Buttons-->

		<Button x:Name="AllCloseBtn" 
			  AllowDrop="True"
			  Click="App_Close"
			  Content="Close App"
			  Foreground="{StaticResource ResourceKey=White0}" 
			  Grid.Row="3" 
			  Grid.Column="3"
			  Height="40" 
			  HorizontalAlignment="Right"
			  Margin="0,10,0,0" 
			  Template="{StaticResource HorizontalGradientTemplateRed}"
			  VerticalAlignment="Top"
			  Width="130" TabIndex="9"  />
		<Button x:Name="Close_Copy" 
			  AllowDrop="True"
			  Click="Close_Btn"
			  Content="Close"
			  Foreground="{StaticResource ResourceKey=White0}" 
			  Grid.Row="3" 
			  Grid.Column="3"
			  Height="40" 
			  HorizontalAlignment="Right"
			  Margin="0,9,138,0" 
			  Template="{StaticResource HorizontalGradientTemplateRed}"
			  VerticalAlignment="Top"
			  Width="130" TabIndex="9"  />
		<Button x:Name="ReloadAllRecs"
			  AllowDrop="True"
			  Click="ReloadListbox"
			  Content="Reload List Box"
			  Foreground="{StaticResource ResourceKey=White0}"
			  Grid.Row="2"
			  Grid.Column="3"
			  Height="40"
			  HorizontalAlignment="Right"
			  Margin="0,0,119,57"
			  Template="{StaticResource GradientButtonTemplateBlue}"
			  VerticalAlignment="Bottom"
			  Width="100" TabIndex="8"  />
		<Button x:Name="ReloadAllRecs_Copy"
			  AllowDrop="True"
			  Click="ReloadListview"
			  Content="Reload List View"
			  Foreground="{StaticResource ResourceKey=White0}"
			  Grid.Row="2"
			  Grid.Column="3"
			  Height="40"
			  HorizontalAlignment="Right"
			  Margin="0,0,7,57"
			  Template="{StaticResource GradientButtonTemplateBlue}"
			  VerticalAlignment="Bottom"
			  Width="110" TabIndex="8"  />
		
		<!--#region Checkboxes-->
		<CheckBox x:Name="Showinfo" 
				Click="ShowInfo_Click"
				Content="Display Flow Document for results"
				FontSize="14"
				Grid.Column="1" 
				Grid.Row="2"
				HorizontalAlignment="Left"
				IsChecked="False"
				Margin="1,0,0,20" 
				VerticalAlignment="Bottom"
				Width="231" Height="23" 
					    />
		<CheckBox x:Name="UseScrollview" 
				Click="scrollview_Click"
				Content="Use Scroll Viewer"
				FontSize="14"
				Grid.Column="1" 
				Grid.Row="2"
				Grid.RowSpan="2" 
				Height="23" 
				HorizontalAlignment="Left"
				IsChecked="False"
				Margin="1,0,0,60" 
				VerticalAlignment="Bottom"
				Width="119" 
			    />
		<!--#endregion Checkboxes-->


		<!--<Button x:Name="LvTemplate"
			  AllowDrop="True"
			  Click="SwitchLBTemplate"
			  Content="Update List Box"
			  Foreground="{StaticResource ResourceKey=White0}"
			  Grid.Row="2"
			  Grid.Column="1"
			  Height="40"
			  HorizontalAlignment="Left"
			  Margin="354,0,0,109"
			  Template="{StaticResource GradientButtonTemplateBlue}"
			  VerticalAlignment="Bottom"
			  Width="110" TabIndex="8"  />-->
		<!--<Button x:Name="LbTemplate"
			  AllowDrop="True"
			  Click="SwitchLVTemplate"
			  Content="Update List View"
			  Foreground="{StaticResource ResourceKey=White0}"
			  Grid.Row="2"
			  Grid.Column="3"
			  Height="40"
			  HorizontalAlignment="Left"
			  Margin="368,0,0,108"
			  Template="{StaticResource GradientButtonTemplateBlue}"
			  VerticalAlignment="Bottom"
			  Width="110" TabIndex="8"  />-->

		<!--#endregion Buttons-->


	</Grid>
</Window>
