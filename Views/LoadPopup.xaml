<Window x:Class="MyDev.Views.LoadPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDev.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="white"
        Title="LoadPopup" Height="80" Width="420">
    <Grid>
        <Border BorderBrush="White" BorderThickness="4" Height="80">
        <TextBlock x:Name="Loadinginfo" Panel.ZIndex="100" Padding =" 0 15 0 0" 
                   Margin="0 0 0 15"
                   Height="45"
                   Background="Red" Foreground="White" 
                   HorizontalAlignment="Center"
                   Text="    Please be patient, the Loading of a TabControl does take a little while.....       " />
        </Border>
    </Grid>
</Window>
