                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>-->
                    </Button>
                    <!--Style="{StaticResource ButtonBackgroundAnimation}"-->
                    <!--Template="{StaticResource HorizontalGradientTemplateGreen}"-->

                    <TextBlock Grid.Row="6" 
                               Grid.ColumnSpan="2"
                               Text="------------------------------------------------------------------------------------------:" 
                               Foreground="White" Margin="0 0 0 0"/>

                    <!--Template="{StaticResource ButtonBaseControlTemplate1}"-->
                    <Button x:Name="ShowTableStructure" 
                            MouseLeave="ShowTableStructure_MouseLeave"
                            MouseEnter="ShowTableStructure_MouseEnter"
                        Content="Table Structure"
