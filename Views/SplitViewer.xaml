                        Background="Black"
                        Foreground="White"
                        Grid.Row="7"
                        Grid.Column="1"
                            Style="{StaticResource ButtonGrowBorderAnimation}"
                        HorizontalAlignment="Center"
                            Template="{StaticResource HorizontalGradientTemplateGreen}"
                        VerticalAlignment="Center"
                           Width="120" 
                        Height="45">
                    </Button>


                    <!--Loaded="Testbtn_Loaded"-->
                    <Button x:Name="Testbutton" 
                           Content="animate"
                             Foreground="White"
                            Click="Animate_Click"
                            Grid.Row="8"
                            Grid.RowSpan="1"
                            Grid.Column="1"
                            Template="{StaticResource HorizontalGradientTemplateGreen}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0 5 65 0"
                           Width="120" 
                            Height="45"
                            Style="{StaticResource ButtonGrowBorderAnimation}">
                    </Button>
                    <TextBlock Grid.Row="9"
                               Grid.ColumnSpan="2"
                               Text="------------------------------------------------------------------------------------------:" 
                               Foreground="White" Margin="0 0 0 0"/>

            </Grid>

            </Border>

            <GridSplitter x:Name="RightHorizontalSplitter"
                        ResizeDirection="Rows"   
                          Height="25"
                        Grid.Row="1"
                        Grid.ColumnSpan="1"
                        DragStarted="RtSplitter_DragStarted"  
                        DragCompleted="RtSplitter_DragCompleted"
                        Panel.ZIndex="7"
                        HorizontalAlignment="Stretch" Margin="0,0,0,0" >
                <GridSplitter.Template>
                    <ControlTemplate>
                        <Grid  Background="{StaticResource White2}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>

                            <Border Background="Transparent" BorderBrush="Red" BorderThickness="3" Grid.Row="0" Height="25">

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Height="23" >
                                    <TextBlock Text="{Binding ShowdragText, FallbackValue=Drag}" 
                                                Height="23" 
                                                Padding="2 0 2 0" 
                                                FontSize="14"
                                                Foreground="Black"
                                                HorizontalAlignment="Right" Margin="30,-3,0,0"/>
                                    <Image x:Name="ImgUp"  Source="{Binding imgup}"  Margin="0 0 0 0" Height="20" Width="20" HorizontalAlignment="Left"/>
                                    <TextBlock x:Name="showmore" Text="{Binding ShowText}" 
                                                Height="23" 
                                                Width="200" 
                                                Margin="0 0 0 0"
