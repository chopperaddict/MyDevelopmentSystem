			  AllowDrop="True"
			  Click="SwitchLVTemplate"
			  Content="Update List View"
			  Foreground="{StaticResource ResourceKey=White0}"
			  Grid.Row="2"
			  Grid.Column="3"
			  Height="40"
			  HorizontalAlignment="Left"
			  Margin="48,0,0,44"
			  Template="{StaticResource GradientButtonTemplateBlue}"
			  VerticalAlignment="Bottom"
			  Width="110" TabIndex="8"  />-->

		<!--#endregion Buttons-->

		<!--#region Checkboxes-->
		<Border
			Background="Transparent"
			BorderBrush="{StaticResource Red3}"
			BorderThickness="1"
			Grid.Column="1" 
			Grid.Row="2" 
			Margin="0,74,269,0" 
			>
			<Grid>
				<CheckBox x:Name="ParkDoc" 
					Click="Park_Click"
					Content="Display at Top Left Corner"
					FontSize="11"
					Foreground="{StaticResource Black0}"
					HorizontalAlignment="Left"
					IsChecked="False"
					Margin="6,0,0,45" 
					VerticalAlignment="Center"
					Width="202" Height="17" 
					    />
				<CheckBox x:Name="Showinfo" 
					Click="ShowInfo_Click"
					Content="Display Flow Document for results"
					FontSize="11"
					Foreground="{StaticResource Black0}"
					HorizontalAlignment="Left"
					IsChecked="False" 
					Margin="6,5,0,0" 
					VerticalAlignment="Center"
					Width="206" Height="17" 
						    />
				<CheckBox x:Name="UseScrollview" 
					Click="scrollview_Click"
					Content="Use Scroll Viewer in Flow Document"
					FontSize="11"
					Foreground="{StaticResource Black0}" 
					Height="17" 
					HorizontalAlignment="Left"
					IsChecked="False"
					Margin="6,60,0,0" 
					VerticalAlignment="Top"
					Width="206" 
				    />
			</Grid>
		</Border>
		<!--#endregion Checkboxes-->
		<!--<Image Source="/Icons/redcross.png" Grid.Column="2" Margin="3,54,373,10" Grid.Row="2" Grid.ColumnSpan="2"/>-->


	</Grid>
</Window>
