				<ListBoxItem 
					FontSize="20"
					Style="{Binding GenericListBoxItemStyle1}">
				</ListBoxItem>
			</ListBox>

			<!--Height="{Binding Path=ActualHeight, ElementName=MainGrid,
					Converter={StaticResource ReduceByParamValue},
					ConverterParameter=50}"-->
			<Border x:Name="UiButtons"
			  Background="{StaticResource Orange2}"
				Canvas.Left ="{Binding Path=ActualWidth, ElementName=listbox1}"
				Canvas.Top="25"
				Margin="0,0,0,0"
				BorderBrush="{StaticResource Black0}"
				BorderThickness="1"
				Width="240"
				VerticalAlignment="Top" 
				Height="{Binding Path=ActualHeight, ElementName=listbox1}">

				<Grid Height="252"  Width="250"
					VerticalAlignment="Bottom" Margin="0,0,-12,0">
					<Grid.RowDefinitions>
						<RowDefinition Height="47" />
						<RowDefinition Height="47" />
						<RowDefinition Height="47" />
						<RowDefinition Height="47" />
						<RowDefinition Height="47" />
						<!--<RowDefinition Height="35" />
					<RowDefinition Height="35" />-->
					</Grid.RowDefinitions>

					<TextBlock 
					Text="Options"
					FontWeight="Bold"
					TextAlignment="Center"
					Grid.Row="0"
					Height="35"
					Width="237"
					Padding="0 6 0 0 "
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Foreground="{StaticResource White0}"
					Background="{StaticResource Blue5}"	/>

					<Button x:Name="Btn1"
					  Click="Btn1_Click"
					Grid.Row="1"
					Height="48"
					Width="237"
					HorizontalAlignment="Left"
					Background="{StaticResource Green5}"
					Foreground="{StaticResource Red5}"
					Content="Clear Grid"/>

					<Button x:Name="Btn2"
					Grid.Row="2"
					Height="48"
					Width="237"
					HorizontalAlignment="Left"
					Background="{StaticResource Green5}"
					Foreground="{StaticResource Black1}"
					Content="Print Grid"/>

					<Button x:Name="Btn3"
						  Click="Btn3_Click"
					Grid.Row="3"
					Height="48"
					Width="237"
					HorizontalAlignment="Left"
					Background="{StaticResource Green5}"
					Foreground="{StaticResource Black1}"
					Content="Reload Grid"/>

				</Grid>
			</Border>

