                                BorderBrush="Red" BorderThickness="2" Background="Transparent"
                                Click="UseScrollviewer_Click"
                                FontSize="14" 
                                Grid.Row="1"
                                Grid.Column="0" 
                                Margin="10,8,0,0" Grid.ColumnSpan="2">
                                <CheckBox.Content>
                                    <TextBlock x:Name="ScrollText"
                                        Text="Use Scrollviewer in Table Structure Viewer"
                                        TextWrapping="Wrap" Width="602" Height="52"/>
                                </CheckBox.Content>
                        </CheckBox>
                    </Border>
                    
                    <Border 
                            Grid.Row="2" 
                            Grid.Column="0"
                            Grid.ColumnSpan="2" BorderBrush="Red" BorderThickness="2">
                        <TextBlock 
                               Text="Upper Data Grid" 
                               HorizontalAlignment="Stretch"
                               Background="{StaticResource Cyan0}"
                               Foreground="Black" 
                               TextAlignment="Center"
                               Width="{Binding ActualWidth,ElementName=GreenBorder}"
                               Margin="-50,0,0,0"/>
                    </Border>
                    <TextBlock Grid.Row="3" FontSize="14" Text="Column #:" Foreground="Black" Margin="20 0 0 0"/>
